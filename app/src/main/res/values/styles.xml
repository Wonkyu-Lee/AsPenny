<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white_alpha95</item>
        <item name="colorPrimaryDark">@color/white_alpha65</item>
        <item name="colorAccent">@color/mint</item>
        <item name="colorControlNormal">@color/mint</item>
        <item name="colorControlHighlight">@color/black_alpha35</item>
        <item name="android:windowBackground">@color/cobalt</item>
