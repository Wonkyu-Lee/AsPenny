    <style name="AppTheme.Borderless">
        <item name="colorControlHighlight">@color/black_alpha35</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:theme">@style/AppTheme.Borderless</item>
    </style>

</resources>
